{
  "name": "saviomd.com",
  "version": "1.0.20210620",
  "description": "Site pessoal de Sávio Mendes com portfólio de trabalhos realizados em desenvolvimento e design web",
  "author": "Sávio Mendes",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/saviomd/saviomd.github.io.git"
  },
  "scripts": {
    "build": "npm install && gulp",
    "start": "gulp dev"
  },
  "dependencies": {
    "@babel/preset-env": "^7.14.5",
    "animate.css": "^4.1.1",
    "autoprefixer": "^10.2.6",
    "autotrack": "^2.4.1",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "bootstrap": "^5.0.1",
    "browser-sync": "^2.26.14",
    "cssnano": "^5.0.6",
    "del": "^6.0.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^6.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-postcss": "^9.0.0",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-uglify": "^3.0.2",
    "jquery": "^3.6.0",
    "jquery-smooth-scroll": "^2.2.0",
    "postcss": "^8.3.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-scss": "^4.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-suitcss": "^15.0.0",
    "wowjs": "^1.1.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "browserSync": {
    "ghostMode": {
      "clicks": true,
      "forms": true,
      "scroll": true
    },
    "server": {
      "baseDir": "./"
    },
    "https": true,
    "startPath": "?a=0"
  },
  "cssnano": {
    "preset": "default"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "browser": true,
      "jquery": true
    },
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "no-tabs": [
        "error",
        {
          "allowIndentationTabs": true
        }
      ]
    }
  },
  "htmlmin": {
    "collapseBooleanAttributes": true,
    "collapseWhitespace": true,
    "minifyCSS": true,
    "minifyJS": true,
    "removeAttributeQuotes": true,
    "removeComments": true
  },
  "pug": {
    "basedir": "_src",
    "pretty": true
  },
  "stylelint": {
    "extends": "stylelint-config-suitcss",
    "rules": {
      "indentation": "tab",
      "selector-max-id": 0,
      "selector-pseudo-element-colon-notation": "single"
    }
  }
}
