{
  "name": "saviomd.com",
  "version": "1.0.20211201",
  "description": "Site pessoal de Sávio Mendes com portfólio de trabalhos realizados em desenvolvimento e design web",
  "author": "Sávio Mendes",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/saviomd/saviomd.github.io.git"
  },
  "scripts": {
    "build": "npm install && gulp",
    "start": "gulp dev"
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@prettier/plugin-pug": "^1.18.0",
    "animate.css": "^4.1.1",
    "autoprefixer": "^10.4.0",
    "autotrack": "^2.4.1",
    "babel-preset-env": "^1.7.0",
    "bootstrap": "^5.1.3",
    "browser-sync": "^2.27.7",
    "cssnano": "^5.0.12",
    "del": "^6.0.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^3.4.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^6.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-postcss": "^9.0.1",
    "gulp-prettier": "^4.0.0",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.0.0",
    "gulp-uglify": "^3.0.2",
    "postcss": "^8.4.4",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.5.0",
    "sass": "^1.44.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-prettier": "^2.0.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "browserSync": {
    "ghostMode": {
      "clicks": true,
      "forms": true,
      "scroll": true
    },
    "server": {
      "baseDir": "./"
    },
    "https": true,
    "startPath": "?a=0"
  },
  "cssnano": {
    "preset": "default"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "env": {
      "browser": true
    }
  },
  "htmlmin": {
    "collapseBooleanAttributes": true,
    "collapseWhitespace": true,
    "minifyCSS": true,
    "minifyJS": true,
    "removeAttributeQuotes": true,
    "removeComments": true
  },
  "pug": {
    "basedir": "_src",
    "pretty": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-prettier/recommended"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "each",
            "include",
            "use"
          ]
        }
      ],
      "selector-class-pattern": null
    }
  }
}
