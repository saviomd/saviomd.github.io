head
	meta(charset='utf-8')
	link(rel='dns-prefetch' href='//fonts.googleapis.com')
	link(rel='dns-prefetch' href='//avatar.xboxlive.com')
	link(rel='dns-prefetch' href='//api.github.com')
	link(rel='dns-prefetch' href='//www.w3.org')
	meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
	meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no')
	title= site.name + ' » ' + page.title
	meta(name='description' content=page.description)
	if page.keywords
		meta(name='keywords' content=page.keywords)
	meta(name='author' content='Sávio Mendes')

	link(rel='stylesheet' href='http://fonts.googleapis.com/css?family=Lato')
	link(rel='stylesheet' href='css/saviomd.min.css')
	link(rel='shortcut icon' href=site.url + 'img/favicon.png')
	link(rel='apple-touch-icon' href=site.url + 'img/apple-touch-icon.png')

	//- chrome android meta tags
	meta(name='theme-color' content='#990000')

	//- open graph meta tags
	if site.fbadmins
		meta(property='og:title' content=site.name + ' » ' + page.title)
		meta(property='og:site_name' content=site.name)
		meta(property='og:description' content=page.description)
		meta(property='og:image' content=site.url + 'img/icon-256.png')
		meta(property='og:url' content=site.url + page.path)
		meta(property='og:type' content='website')
		meta(property='fb:admins' content=site.fbadmins)

	//- twitter meta tags
	if site.twitter
		meta(name='twitter:card' content='summary')
		meta(name='twitter:site' content=site.twitter)
		meta(name='twitter:title' content=site.name + ' » ' + page.title)
		meta(name='twitter:description' content=page.description)
		meta(name='twitter:image:src' content=site.url + 'img/icon-256.png')

	<!--[if lt IE 9]><script src='/lib/js/html5shiv.min.js'></script>
	<script src='/lib/js/respond.min.js'></script><![endif]-->

	script.
		// google analytics
		if (location.search.indexOf('a=0') === -1){
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', '#{site.googleAnalyticsUA}', 'auto');
			ga('send', 'pageview');
		};
