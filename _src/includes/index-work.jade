include /data/work.jade

section#work.work.container-fluid
	h2.title= 'Trabalhos'
	ul.list-unstyled.row
		each item in work
			li.work__item.col-xs-12.col-md-6.wow.fadeIn
				img.work__img.img-responsive(alt=item.name, height='450', src=item.image, width='600')
				.work__info
					header
						h3.title.title--sub= item.name
					ul.list-unstyled.work__technologies.clearfix
						each tag in item.tags
							li= tag
					if item.url
						a.btn.pull-right.js-btn-work(href=item.url, target='_blank')= 'Visite o site'
