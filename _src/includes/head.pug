- pageTitle = site.name + ' » ' + page.title

head
	meta(charset='utf-8')
	meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
	meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')

	link(rel='preconnect', href='//cdn.mouseflow.com')
	link(rel='preconnect', href='//static.hotjar.com')
	link(rel='preconnect', href='//www.google-analytics.com')
	link(rel='preload', as='style', href='https://fonts.googleapis.com/css?family=Lato')
	link(rel='preload', as='style', href='css/saviomd' + (site.minify ? '.min' : '') + '.css')
	link(rel='preload', as='image', href='https://avatar-ssl.xboxlive.com/avatar/saviomd/avatar-body.png')
	link(rel='preload', as='script', href='js/saviomd' + (site.minify ? '.min' : '') + '.js')

	title= pageTitle
	meta(name='description', content=page.description)
	if page.keywords
		meta(name='keywords', content=page.keywords)
	meta(name='author', content='Sávio Mendes')
	if site.noindex
		meta(name='robots', content='noindex, nofollow')

	link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato')
	link(rel='stylesheet', href='css/saviomd' + (site.minify ? '.min' : '') + '.css')
	link(rel='shortcut icon', href=site.url + 'img/favicon.png')
	link(rel='apple-touch-icon', href=site.url + 'img/apple-touch-icon.png')
	link(rel='canonical', href=site.url + page.path)

	//- web app manifest
	link(rel='manifest', href=site.url + 'manifest.json')

	//- chrome android toolbar color
	meta(name='theme-color', content=site.themeColor)

	//- twitter and open graph meta tags
	meta(name='twitter:card', content='summary')
	meta(name='twitter:site', content=site.twitter)
	meta(property='og:url', content=site.url + page.path)
	meta(property='og:title', content=pageTitle)
	meta(property='og:description', content=page.description)
	meta(property='og:image', content=site.url + 'img/icon-256.png')

	//- windows pinned site
	meta(name='msapplication-TileImage', content='img/favicon.png')
	meta(name='msapplication-TileColor', content=site.themeColor)

	script.
		var tagHtml = document.getElementsByTagName('html')[0];
		tagHtml.className = tagHtml.className.replace('no-js', 'js');

		if (location.search.indexOf('a=0') === -1) {
			// google analytics
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', '#{site.googleAnalyticsUA}', 'auto', {
				siteSpeedSampleRate: 100
			});
			ga('require', 'eventTracker');
			ga('require', 'outboundLinkTracker');
			ga('send', 'pageview');

			// hotjar
			(function(h,o,t,j,a,r){
				h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
				h._hjSettings={hjid:247241,hjsv:5};
