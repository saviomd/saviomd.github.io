- var pageTitle = site.name + ' » ' + page.title

head
	meta(charset='utf-8')
	link(rel='dns-prefetch', href='//api.github.com')
	link(rel='dns-prefetch', href='//avatar-ssl.xboxlive.com')
	link(rel='dns-prefetch', href='//cdn.mouseflow.com')
	link(rel='dns-prefetch', href='//fonts.googleapis.com')
	link(rel='dns-prefetch', href='//fonts.gstatic.com')
	link(rel='dns-prefetch', href='//www.google-analytics.com')
	link(rel='dns-prefetch', href='//www.w3.org')
	meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
	meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')
	title= pageTitle
	meta(name='description', content=page.description)
	if page.keywords
		meta(name='keywords', content=page.keywords)
	meta(name='author', content='Sávio Mendes')
	if site.noindex
		meta(name='robots', content='noindex, nofollow')

	link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato')
	link(rel='stylesheet', href='css/vendor' + (site.dev ? '' : '.min') + '.css')
	link(rel='stylesheet', href='css/saviomd' + (site.dev ? '' : '.min') + '.css')
	link(rel='shortcut icon', href=site.url + 'img/favicon.png')
	link(rel='apple-touch-icon', href=site.url + 'img/apple-touch-icon.png')
	link(rel='canonical', href=site.url + page.path)

	//- chrome android meta tags
	meta(name='theme-color', content='#990000')

	//- twitter and open graph meta tags
	meta(name='twitter:card', content='summary')
	meta(name='twitter:site', content=site.twitter)
	meta(property='og:url', content=site.url + page.path)
	meta(property='og:title', content=pageTitle)
	meta(property='og:description', content=page.description)
	meta(property='og:image', content=site.url + 'img/icon-256.png')

	<!--[if lt IE 9]>
	script(src='js/html5shiv.min.js')
	script(src='js/respond.min.js')
	<![endif]-->

	script.
		var tagHtml = document.getElementsByTagName('html')[0];
		tagHtml.className = tagHtml.className.replace('no-js', 'js');
		// google analytics
		if (location.search.indexOf('a=0') === -1) {
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', '#{site.googleAnalyticsUA}', 'auto');
			ga('send', 'pageview');
		};
