include /data/site.jade

doctype html
html(lang=site.lang)
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		title= site.name + ' Â» Erro 404'
		meta(name='robots', content='noindex')
		link(rel='shortcut icon', href=site.url + 'img/favicon.png')
		link(rel='apple-touch-icon', href=site.url + 'img/apple-touch-icon.png')

		style.
			body {font:normal 24px/1.5 Arial, Helvetica, sans-serif; margin:0}

			.wrapper {margin:40px auto 0; position:relative; text-align:right; width:90%; max-width:768px}
			.foto {position:absolute; left:0; top:0; width:80%; z-index:1}
			.mensagem {position:absolute; right:0; top:0; width:100%; z-index:2}
			.mensagem h1 {font-size:72px; margin:0 0 40px}

			.btn {background:#900; border-radius:5px; color:#FFF; display:inline-block; font-weight:bold; padding:5px 10px; text-decoration:none; -webkit-transition:all 0.5s; transition:all 0.5s}
			.btn:hover,
			.btn:focus {background:#C00; box-shadow:inset 0 0 40px #900}

		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', '#{site.googleAnalyticsUA}', 'auto', {
				siteSpeedSampleRate: 100
			});
			ga('require', 'eventTracker');
			ga('require', 'outboundLinkTracker');
			ga('send', 'pageview');

	body
		.wrapper
			img.foto(src=site.url + 'img/ryu.jpg', alt='ryu')
			.mensagem
				h1= '404'
				a(href='javascript:history.back();', class='btn', ga-on='click', ga-event-category=site.name, ga-event-action='Voltar no erro 404')= 'Voltar'
